{
  "compilerOptions": {
    "target": "ES2021",
  "module": "ESNext",
  "moduleResolution": "Bundler",
    "lib": ["ES2021", "DOM"],
    "types": ["node", "react"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "include": ["src/**/*", "tests/**/*", "apps/web/**/*"],
  "exclude": ["node_modules", "dist"]
}
